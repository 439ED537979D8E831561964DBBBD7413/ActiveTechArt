<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.artace.arthub.SenimanHomeProfileFragment">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_seniman_home_profile_layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="@drawable/background_head"
        app:layout_constraintBottom_toTopOf="@+id/scrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/event_detail_imageEvent_container"
            android:layout_width="85dp"
            android:layout_height="85dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp">
            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:padding="5dp"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <com.artace.arthub.ViewPlugins.CircularNetworkImageView
                android:id="@+id/fragment_seniman_home_profile_imageSeniman"
                android:layout_width="85dp"
                android:layout_height="85dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/fragment_seniman_home_profile_namaSeniman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Junaidi Karo"
            android:textColor="@color/colorWhiteText"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/event_detail_imageEvent_container"
            app:layout_constraintStart_toStartOf="@+id/event_detail_imageEvent_container"
            app:layout_constraintTop_toBottomOf="@+id/event_detail_imageEvent_container" />

        <TextView
            android:id="@+id/fragment_seniman_home_profile_keahlian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penyanyi, Gitaris "
            android:textColor="@color/colorWhiteText"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/fragment_seniman_home_profile_namaSeniman"
            app:layout_constraintStart_toStartOf="@+id/fragment_seniman_home_profile_namaSeniman"
            app:layout_constraintTop_toBottomOf="@+id/fragment_seniman_home_profile_namaSeniman" />

    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_seniman_home_profile_layoutHeader">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="180dp"
            app:layout_constraintTop_toBottomOf="@+id/fragment_seniman_home_profile_layoutHeader">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp">

                    <ImageView
                        android:id="@+id/fragment_seniman_home_profile_img4"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/call"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/fragment_seniman_home_profile_noTelp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/fragment_seniman_home_profile_noTelp"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/form_content_height"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:editable="false"
                        android:ems="8"
                        android:paddingLeft="10dp"
                        android:text="+6281 7300 1200"
                        android:textColorHint="@color/colorSecondaryText"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/fragment_seniman_home_profile_editNoTelp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="25dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/fragment_seniman_home_profile_noTelp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/pencil_abu" />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp">

                    <ImageView
                        android:id="@+id/fragment_seniman_home_profile_img2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/medium_gender"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/fragment_seniman_home_profile_jenisKelamin"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/fragment_seniman_home_profile_jenisKelamin"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:editable="false"
                        android:ems="8"
                        android:paddingLeft="10dp"
                        android:text="Laki - Laki"
                        android:textColorHint="@color/colorSecondaryText"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/fragment_seniman_home_profile_editJenisKelamin"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="25dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/fragment_seniman_home_profile_jenisKelamin"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/pencil_abu" />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp">

                    <ImageView
                        android:id="@+id/fragment_seniman_home_profile_img3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/if_icons_user_1564534"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/fragment_seniman_home_profile_umur"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/fragment_seniman_home_profile_umur"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/form_content_height"
                        android:editable="false"
                        android:ems="8"
                        android:paddingLeft="10dp"
                        android:text="27"
                        android:textColorHint="@color/colorSecondaryText"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/fragment_seniman_home_profile_editUmur"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="25dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/fragment_seniman_home_profile_umur"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/pencil_abu" />

                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/fragment_seniman_home_layoutVideo_container"
                android:layout_width="245dp"
                android:layout_height="145dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="@+id/linearLayout"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/fragment_seniman_home_profile_videoSeniman"
                    android:fitsSystemWindows="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <Button
                android:id="@+id/fragment_seniman_home_profile_btnUbahVideo"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:background="?attr/colorButtonNormal"
                android:text="UBAH VIDEO"
                android:textColor="@color/colorPrimaryText"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/fragment_seniman_home_layoutVideo_container"
                app:layout_constraintStart_toStartOf="@+id/fragment_seniman_home_layoutVideo_container"
                app:layout_constraintTop_toBottomOf="@+id/fragment_seniman_home_layoutVideo_container" />

            <Button
                android:id="@+id/fragment_seniman_home_profile_btnSimpan"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/green_button_color"
                android:text="SIMPAN"
                android:textColor="@color/colorWhiteText"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_seniman_home_profile_btnUbahVideo" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
