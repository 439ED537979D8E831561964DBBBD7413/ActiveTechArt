<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_base"
    tools:context="com.artace.ruangbudaya.SenimanListTawaranFragment">

    <ProgressBar
        android:id="@+id/fragment_seniman_list_tawaran_progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"/>


        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/fragment_seniman_list_tawaran_swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_seniman_list_tawaran_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>
